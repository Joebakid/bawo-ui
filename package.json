{
  "name": "bawo-ui",
  "version": "1.0.0",
  "description": "Bawo UI kit: theme switcher, gradients, Tailwind components, pagination, copy button, loaders.",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./button": {
      "import": "./dist/components/Button.js",
      "require": "./dist/components/Button.cjs"
    },
    "./card": {
      "import": "./dist/components/Card.js",
      "require": "./dist/components/Card.cjs"
    },
    "./modal": {
      "import": "./dist/components/Modal.js",
      "require": "./dist/components/Modal.cjs"
    },
    "./badge": {
      "import": "./dist/components/Badge.js",
      "require": "./dist/components/Badge.cjs"
    },
    "./pagination": {
      "import": "./dist/components/Pagination.js",
      "require": "./dist/components/Pagination.cjs"
    },
    "./copy-button": {
      "import": "./dist/components/CopyButton.js",
      "require": "./dist/components/CopyButton.cjs"
    },
    "./loaders": {
      "import": "./dist/components/Loaders.js",
      "require": "./dist/components/Loaders.cjs"
    },
    "./theme": {
      "import": "./dist/theme/index.js",
      "require": "./dist/theme/index.cjs"
    },
    "./theme-switcher": {
      "import": "./dist/theme/index.js",
      "require": "./dist/theme/index.cjs"
    },
    "./gradients": {
      "import": "./dist/gradients/color.js",
      "require": "./dist/gradients/color.cjs"
    },
    "./styles.css": "./src/styles.css"
  },
  "sideEffects": [
    "./src/styles.css"
  ],
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "dependencies": {
    "clsx": "^2.1.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "tsup": "^8.0.2",
    "typescript": "^5.5.4"
  },
  "scripts": {
    "build": "tsup --config tsup.config.ts",
    "dev": "tsup --config tsup.config.ts --watch",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist",
    "src/styles.css",
    "README.md"
  ],
  "keywords": [
    "react",
    "ui",
    "tailwind",
    "theme",
    "pagination",
    "loader",
    "copy-to-clipboard",
    "gradients"
  ],
  "publishConfig": {
    "access": "public"
  }
}
